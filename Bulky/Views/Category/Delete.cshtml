@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="p-3 mt-4">
        <div class="row pob-2">
            <h2>Delete Category</h2>
        </div>
        <div class="row p-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" type="text" />
        </div>
        <div class="row p-2">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" type="text" />
        </div>
        <div class="row p-2">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" type="text" />
        </div>
        <div class="row p-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to Category</a>
            </div>
        </div>
    </div>

</form>

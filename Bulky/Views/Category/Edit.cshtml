@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="p-3 mt-4">
        <div class="row pob-2">
            <h2>Edit Category</h2>
        </div>
        <div>
            @* <div asp-validation-summary="All" class="text-danger"></div> *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="row p-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" type="text" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row p-2">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" type="text" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row p-2">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" type="text" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row p-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to Category</a>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}